Процедура ПроверкаСуществующихЗаписейРегистраСведений(НаборЗаписей, СтруктураПараметров, Отказ)
	
	ИмяРегистра = СтруктураПараметров.МетаданныеНабора.ПолноеИмя();
	
	// Формирование текста условия отбора для проверки только требуемых записей.
	
	Запрос = Новый Запрос;
	
	УсловиеОтбора = "";
	Для каждого ЭлементОтбора Из НаборЗаписей.Отбор Цикл
		Если Не ЭлементОтбора.Использование Тогда
			Продолжить;
		КонецЕсли;
		
		Если УсловиеОтбора = "" Тогда
			УсловиеОтбора = УсловиеОтбора + "	";
		Иначе
			УсловиеОтбора = УсловиеОтбора +
			"
			|	И ";
		КонецЕсли;
		
		УсловиеОтбора = УсловиеОтбора +
			"ТекущийРегистр." + ЭлементОтбора.Имя + " = &" + ЭлементОтбора.Имя;
		
		Запрос.УстановитьПараметр(ЭлементОтбора.Имя, ЭлементОтбора.Значение);
	КонецЦикла;
	
	Запрос.Текст =
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	ИСТИНА КАК ЗначениеИстина
	|ИЗ
	|	&ТекущийРегистр КАК ТекущийРегистр
	|ГДЕ
	|	&Условие";
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&ТекущийРегистр", ИмяРегистра);
	
	УсловиеПроверки = УсловиеПроверкиСуществующихЗаписейРегистра(Запрос, СтруктураПараметров);
	
	Если УсловиеОтбора <> "" Тогда
		УсловиеПроверки = УсловиеОтбора +
		"
		|И (" + УсловиеПроверки + ")";
	КонецЕсли;
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&Условие", УсловиеПроверки);
	
	Если НЕ Запрос.Выполнить().Пустой() Тогда
		Отказ = Истина;
	Иначе
		Отказ = Ложь;
	КонецЕсли;
	
