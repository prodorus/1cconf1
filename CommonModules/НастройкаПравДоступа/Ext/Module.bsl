Функция УсловиеПроверкиСуществующихЗаписейРегистра(Запрос, СтруктураПараметров)
	
	Перем ИмяПоляПериода;
	
	Условие = "";
	СтруктураПараметров.Свойство("ПолеПериод", ИмяПоляПериода);
	
	Если СтруктураПараметров.ЕстьОрганизация Тогда
		Индекс = 1;
		Для Каждого КлючИЗначение ИЗ СтруктураПараметров.СоответствиеГраницЗапрета Цикл
			Номер = Формат(Индекс, "ЧГ=0");
			Условие = Условие + ?(Условие = "", "", "
			|	ИЛИ ") + "  ТекущийРегистр." + ИмяПоляПериода + " <= &ДатаЗапрета" + Номер + "
			|		И ТекущийРегистр.Организация = &Организация" + Номер;
			Запрос.УстановитьПараметр("Организация" + Номер, КлючИЗначение.Ключ);
			ГраницаПериода = КлючИЗначение.Значение;
			Запрос.УстановитьПараметр("ДатаЗапрета" + Номер, ?(ГраницаПериода = Неопределено, NULL, ГраницаПериода));
			Индекс = Индекс + 1;
		КонецЦикла;
	Иначе
		Условие = "	ТекущийРегистр." + ИмяПоляПериода + " <= &ДатаЗапрета";
		ГраницаПериода = СтруктураПараметров.СоответствиеГраницЗапрета[Справочники.Организации.ПустаяСсылка()];
		Если ГраницаПериода = Неопределено Тогда
			ГраницаПериода = СтруктураПараметров.СоответствиеГраницЗапрета["ОбщаяДатаЗапретаРедактирования"];
		КонецЕсли;
		
		Запрос.УстановитьПараметр("ДатаЗапрета", ?(ГраницаПериода = Неопределено, NULL, ГраницаПериода));
	КонецЕсли;
	
	Возврат Условие;
	
КонецФункции

